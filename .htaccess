<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d

  # URL dinámica: /editar/1 → editar.php?id=1
  RewriteRule ^editar/([0-9]+)/?$ editar.php?id=$1 [L,QSA]

  RewriteRule ^([a-zA-Z0-9_-]+)/?$ $1.php [L,QSA]
</IfModule>
